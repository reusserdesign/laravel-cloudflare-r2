{
    "name": "reusser/laravel-cloudflare-r2",
    "description": "Cloudflare R2 integration for Laravel's Storage API",
    "keywords": [
        "reusser",
        "laravel",
        "laravel-cloudflare-r2"
    ],
    "homepage": "https://github.com/reusserdesign/laravel-cloudflare-r2",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin Drummond",
            "email": "austin.drummond@reusser.com",
            "role": "Developer"
        },
        {
            "name": "Jake Smith",
            "email": "jake.smith@reusser.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "league/flysystem-aws-s3-v3": "^3.25",
        "league/flysystem-path-prefixing": "^3.23",
        "league/flysystem-read-only": "^3.23",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9||^3.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Reusser\\CloudflareR2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reusser\\CloudflareR2\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-cloudflare-r2 --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reusser\\CloudflareR2\\CloudflareR2ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
